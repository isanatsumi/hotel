{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<style>
    html,
    body {
        height: 100%;
    }

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }
    .form-signin .checkbox {
        font-weight: 400;
    }
    .form-signin .form-control {
        position: relative;
        box-sizing: border-box;
        height: auto;
        padding: 10px;
        font-size: 16px;
    }
    .form-signin .form-control:focus {
        z-index: 2;
    }
    .form-signin input[type="usuario"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }
    .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
</style>

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="text-center">
        <img class="mb-4" src="../../image/Hoothoot.png" alt="" width="90" height="90">
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>

        <label for="username" class="sr-only">Usuário</label>
        <input type="usuario" id="username" class="form-control" placeholder="Usuário" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

        <label for="password" class="sr-only">Senha</label>
        <input type="password" id="password" class="form-control" placeholder="Senha" name="_password" required="required" autocomplete="current-password" />

        <div class="checkbox mb-3">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"> Lembrar me
            </label>
        </div>

        <input type="submit" id="_submit" name="_submit" value="{{ 'Entrar'|trans }}" class="btn btn-lg btn-dark btn-block" />
    </div>
</form>
